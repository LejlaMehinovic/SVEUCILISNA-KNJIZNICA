<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="https://kit.fontawesome.com/94e277c9e1.js" crossorigin="anonymous"></script>

    <link href="https://fonts.googleapis.com/css?family=Cinzel:400,700|Roboto+Slab&display=swap" rel="stylesheet" />
    <style>


        h6 {
            text-align: center;
            padding-top: 10px;
            font-size: 20px;
        }

        .form-control {
            margin: 0 auto;
            float: none;
        }

        .form-group {
            text-align: center;
        }

        .btn-primary {
            background-color: brown;
            border-color: brown;
        }

        .page-item.active .page-link {
            color: white !important;
            background-color: brown !important;
            border-color: brown !important;
        }

        .page-link {
            color: brown !important;
        }
            .col-sm-10 {
                border-radius: 10px 10px;
                font-family:'Roboto Slab';
            }
    </style>
</head>
<body>

    <div class="jumbotron" style="margin-bottom:0;background-image: url(../../book2.png);height:200px">

    </div>

    <div class="container-fluid">
        <div class="row">

            <div class="col-sm-12" style="background-color:#f4f4d7;">
                <h2 style="color:#663300;text-align:center;font-family:Cinzel;font-size:50px">Sveučilišna knjižnica u Puli</h2>
                <h4 style="color:#663300;text-align:center;font-family:Roboto Slab">Sustav za pretragu knjiga Sveučilišne knjižnice u Puli</h4>

                <div class="col-sm-1">

                </div>
                <div class="col-sm-10 col-centered" style="background-color:#d2a679;">
                    <h2 style="color:#663300">Pregled transakcija</h2>
                    <div class="form-group">
                        <table class="table table-bordered table-hover table-responsive">
                            <thead>
                            <th style="text-align:center">
                                Korisnik
                            </th>
                            <th style="text-align:center">
                                Knjiga
                            </th>
                            <th style="text-align:center">
                                Barkod
                            </th>
                            <th style="text-align:center">
                                Datum
                            </th>

                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Korisnik)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Knjiga)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Barkod)
                                        </td>
                                        <td>
                                            @item.Datum.ToString("dd.MM.yyyy")
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>


                        <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Student")';return false;"><i class="fas fa-arrow-left"></i> Nazad</button>


                    </div>
                </div>
                <div class="col-sm-1"></div>



            </div>
        </div>
    </div>



</body>
</html>