@model IEnumerable<SVEUCILISNA_KNJIZNICA.Models.Zaliha>
@{
    ViewBag.Title = "IndexForStudent";
}


<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script src="https://kit.fontawesome.com/94e277c9e1.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css?family=Cinzel:400,700|Roboto+Slab&display=swap" rel="stylesheet" />
    <style>


        h6 {
            text-align: center;
            padding-top: 10px;
            font-size: 20px;
        }

        .form-control {
            margin: 0 auto;
            float: none;
        }

        .form-group {
            text-align: center;
        }

        .btn-primary {
            background-color: brown;
            border-color: brown;
        }

        .page-item.active .page-link {
            color: white !important;
            background-color: brown !important;
            border-color: brown !important;
        }

        .page-link {
            color: brown !important;
        }
            .col-sm-10 {
                border-radius: 10px 10px;
                font-family:'Roboto Slab';
            }
    </style>
</head>
<body>

    <div class="jumbotron" style="margin-bottom:0;background-image: url(../../book2.png);height:200px">

    </div>

    <div class="container-fluid">
        <div class="row">

            <div class="col-sm-12" style="background-color:#f4f4d7;">
                <h2 style="color:#663300;text-align:center;font-family:Cinzel;font-size:50px">Sveučilišna knjižnica u Puli</h2>
                <h4 style="color:#663300;text-align:center;font-family:Roboto Slab">Sustav za pretragu knjiga Sveučilišne knjižnice u Puli</h4>

                <div class="col-sm-1">

                </div>
                <div class="col-sm-10 col-centered" style="background-color:#d2a679;">
                    @using (Html.BeginForm("Index", "Knjiga", FormMethod.Post))
                    {

                        <div class="form-group">



                            <br /><table class="table table-bordered table-hover">
    <thead>

    <th style="text-align:center">
        @Html.DisplayNameFor(model => model.Knjiga.Naziv)
    </th>
    <th style="text-align:center">
        @Html.DisplayNameFor(model => model.Knjiga.Autor)
    </th>
    <th style="text-align:center">
        @Html.DisplayNameFor(model => model.Knjiga.Barkod)
    </th>
    <th style="text-align:center">
        @Html.DisplayNameFor(model => model.Knjiga.ISBN)
    </th>
    <th style="text-align:center">
        Godina izdanja
    </th>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Knjiga.Naziv)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Knjiga.Autor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Knjiga.Barkod)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Knjiga.ISBN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Knjiga.GodIzdanja)
                </td>



            </tr>
        }
    </tbody>
</table>
                            <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Student")';return false;"><i class="fas fa-arrow-left"></i> Nazad</button>
                          
                        </div>
                    }


                </div>

                <div class="col-sm-1"></div>



            </div>
        </div>
    </div>



</body>
</html>